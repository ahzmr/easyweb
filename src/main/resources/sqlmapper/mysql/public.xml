<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="public">

    <sql id="WhereClause4Query">
        <where>
            <foreach item="value" index="index" collection="whereValues">
                ${whereSqls[index]} #{value}
            </foreach>
            ${whereEndSql}
        </where>
    </sql>

    <sql id="UpdateWhereClause4Query">
        <where>
            <foreach item="value" index="index" collection="query.whereValues">
                ${query.whereSqls[index]} #{value}
            </foreach>
            ${query.whereEndSql}
        </where>
    </sql>

    <sql id="SelectById">
        select
        <include refid="BaseColumnList" />
        from
        <include refid="TableClause" />
        <include refid="WhereClause4Id" />
    </sql>

    <sql id="Select4Query">
        select
        <choose>
            <when test="selectClause != null">
                ${selectClause}
            </when>
            <otherwise>
                <if test="distinct" >
                    distinct
                </if>
                <include refid="BaseColumnList" />
            </otherwise>
        </choose>
        from
        <choose>
            <when test="fromClause != null">
                ${fromClause}
            </when>
            <otherwise>
                <include refid="TableClause" />
            </otherwise>
        </choose>
        <include refid="public.WhereClause4Query" />
        <if test="orderByClause != null" >
            order by ${orderByClause}
        </if>
    </sql>

    <sql id="Count4Query">
        select count(*) from
        <choose>
            <when test="fromClause != null">
                ${fromClause}
            </when>
            <otherwise>
                <include refid="TableClause" />
            </otherwise>
        </choose>
        <include refid="public.WhereClause4Query" />
    </sql>

    <sql id="DeleteById">
        delete from
        <include refid="TableClause" />
        <include refid="WhereClause4Id" />
    </sql>

    <sql id="LogicDeleteById">
        update set DEL_FLAG = '1' from
        <include refid="TableClause" />
        <include refid="WhereClause4Id" />
    </sql>

    <sql id="Delete4Query">
        delete from
        <choose>
            <when test="fromClause != null">
                ${fromClause}
            </when>
            <otherwise>
                <include refid="TableClause" />
            </otherwise>
        </choose>
        <include refid="public.WhereClause4Query" />
    </sql>

    <sql id="LogicDelete4Query">
        update set DEL_FLAG = '1' from
        <choose>
            <when test="fromClause != null">
                ${fromClause}
            </when>
            <otherwise>
                <include refid="TableClause" />
            </otherwise>
        </choose>
        <include refid="public.WhereClause4Query" />
    </sql>
</mapper>
